@model ProyDSWIPeliculas.Models.Peliculas

@{
    ViewData["Title"] = "Detalle de Película";
}

<h1 class="text-center">Detalle de Película</h1>

<div class="card mt-4">
    <div class="card-header bg-primary text-white">
        <h4>@Model.nom_peli</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3"><strong>Código</strong></dt>
            <dd class="col-sm-9">@Model.cod_peli</dd>

            <dt class="col-sm-3"><strong>Nombre</strong></dt>
            <dd class="col-sm-9">@Model.nom_peli</dd>

            <dt class="col-sm-3"><strong>Descripción</strong></dt>
            <dd class="col-sm-9">@Model.desc_peli</dd>

            <dt class="col-sm-3"><strong>Año de Lanzamiento</strong></dt>
            <dd class="col-sm-9">@Model.anio_peli</dd>

            <dt class="col-sm-3"><strong>Idioma</strong></dt>
            <dd class="col-sm-9">@Model.nom_idio</dd>

            <dt class="col-sm-3"><strong>Duración (min)</strong></dt>
            <dd class="col-sm-9">@Model.dur_peli</dd>

            <dt class="col-sm-3"><strong>Precio</strong></dt>
            <dd class="col-sm-9">@Model.pre_peli</dd>

            <dt class="col-sm-3"><strong>Stock Disponible</strong></dt>
            <dd class="col-sm-9">@Model.stk_peli</dd>
        </dl>
    </div>
</div>

<hr />

<div class="mt-4">
    <h4>Agregar al Carrito</h4>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form asp-controller="Carrito" asp-action="AgregarAlCarrito" method="post" class="mt-3">
        <input type="hidden" name="codPeli" value="@Model.cod_peli" />
        <div class="form-group row">
            <label for="cantidad" class="col-sm-3 col-form-label"><strong>Cantidad</strong></label>
            <div class="col-sm-9">
                <input type="number" class="form-control" id="cantidad" name="cantidad" min="1" placeholder="Ingrese la cantidad" required />
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Agregar al Carrito</button>
    </form>
</div>

<hr />

<div class="text-center mt-4">
    @Html.ActionLink("Editar Película", "EditPelicula", new { id = Model.cod_peli }, new { @class = "btn btn-warning" }) |
    <a asp-action="IndexPeliculas" class="btn btn-secondary">Regresar a Listado</a>
</div>